{
  "name": "tonttihaku",
  "version": "0.1.0",
  "description": "City of Helsinki ground rent system public UI",
  "license": "MIT",
  "dependencies": {
    "@react-hook/throttle": "^2.2.0",
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/geojson": "^7946.0.8",
    "@types/leaflet-draw": "^1.0.5",
    "@types/node": "^16.11.7",
    "@types/proj4": "^2.5.2",
    "@types/proj4leaflet": "^1.0.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.5",
    "@types/react-redux": "^7.1.12",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-form": "^8.3.3",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "hds-core": "^1.6.0",
    "hds-design-tokens": "^1.7.1",
    "hds-react": "^1.6.0",
    "history": "5.1.0",
    "i18next": "^21.6.0",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-parser": "^5.3.0",
    "leaflet": "1.7.1",
    "leaflet-draw": "^1.0.4",
    "leaflet-geosearch": "^3.6.0",
    "leaflet-measure-path": "^1.5.0",
    "node-sass": "6.0.1",
    "oidc-client": "^1.11.5",
    "proj4": "^2.7.5",
    "proj4leaflet": "^1.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-grid-system": "^8.0.1",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.15.1",
    "react-leaflet": "^3.2.2",
    "react-leaflet-draw": "^0.19.8",
    "react-redux": "^7.2.2",
    "react-router": "^6.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.3.8",
    "redux-injectors": "^1.3.0",
    "redux-oidc": "^4.0.0-beta1",
    "redux-saga": "^1.1.3",
    "typescript": "^4.1.3",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "start": "yarn run prepare-renew-endpoint && yarn run start-server",
    "build": "yarn run prepare-renew-endpoint && DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:coverage": "react-scripts test --coverage --runInBand --watchAll=false",
    "prepare": "husky install",
    "i18n": "npx i18next",
    "start-server": "react-scripts start",
    "prepare-renew-endpoint": "node scripts/prepare-renew-endpoint.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "build/*"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/leaflet": "^1.7.6",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "husky": "^7.0.4",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/*.(test).{js,jsx,ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 80
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss,md}": [
      "prettier --write"
    ]
  }
}
